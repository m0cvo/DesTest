<Window
    x:Class="DesTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DesTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!--<Button x:Name="myButton" Click="myButton_Click">Click Me</Button>-->
        <Grid Padding="40">
            <TextBlock>
            <Run FontSize="24" Foreground="#FFFC5185">Get Started with XAML Studio</Run><LineBreak/>
            <Run> Modify this text below to see a live preview.</Run>
            </TextBlock>
            <Button x:Name="Btn1" Content="Click me"
        Click="Btn1Click" ClickMode="Press"
        Margin="5,5,5,5" Width="150" 
        HorizontalAlignment="Left" 
          Foreground="Blue"/>
        <Button x:Name="CloseBtn" Content="Close"
        Click="CloseBtnClick" ClickMode="Press"
        Foreground="Red" />
        </Grid>
    </StackPanel>
</Window>
